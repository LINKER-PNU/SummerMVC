<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ac.linker.mapper.ConnectMapper">
  <select id="getUser" resultType="java.util.HashMap">
    SELECT * FROM room;
  </select>
  
  <insert id="insertUser">
    INSERT INTO user(user_auth_token,user_name,user_id,user_join_dt) VALUES (#{authToken},#{displayName},#{userId},#{joinDate})
  </insert>

  <update id="updateToken">
    UPDATE user SET auth_token=#{authToken} WHERE user_id=#{userId}
  </update>
</mapper>